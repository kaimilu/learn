.user-container {
    padding: 10rpx;
}

.user-list {
    display: flex;
    padding: 20rpx;
    border: 1px #f5f5f5 solid;
    box-shadow: 0 0 10rpx #eee;
    margin-bottom: 10rpx;
}

.user-list image {
    width: 160rpx;
    height: 160rpx;
}

.user-info {
    flex: 1;
    padding-left: 20rpx;
    color: #636363;
    font-size: 18px;
    display: flex;
    flex-direction: column;
    line-height: 1.6;
    justify-content: space-between;
}

.user-info .item:nth-of-type(1) {
    font-size: 16px;
    display: flex;
    justify-content: space-between;
}

.user-info .item:nth-of-type(1) text:nth-child(2) {
    font-size: 10px;
}

.user-info .item:nth-of-type(2) {
    font-size: 10px;
}

.user-info .item:nth-of-type(2) text {
    padding: 6rpx 15rpx;
    background-color: #aec7ef;
    border-radius: 2px;
    color: #fff;
}

.user-info .item:nth-of-type(2) text.pink {
    background-color: #ffb3c7;
}

.user-info .item:nth-of-type(2) text.oringe {
    background-color: #dcb8ac;
}

.user-info .item:nth-of-type(2) text+text {
    margin-left: 15rpx;
}

.user-info .item:nth-of-type(3) {
    color: #989898;
    font-size: 12px;
}