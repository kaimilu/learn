<view>
    <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" style="width:100%; height:400rpx">
        <block wx:for="{{imgUrls}}">
            <swiper-item>
                <image src="{{item}}" class="slide-image" />
            </swiper-item>
        </block>
    </swiper>

    <view class="user-container">
        <block wx:for="{{user_list}}" wx:for-item="item" wx:for-index="idx">
            <view class="user-list">
                <image src="/images/logo.jpg"></image>
                <view class="user-info">
                    <view class="item">
                        <text>{{item.userName}} No.{{idx+1}}</text>
                        <text>{{item.juli}}</text>
                    </view>
                    <view class="item">
                        <text>{{item.live}}</text>
                        <text class="pink">{{item.yz}}</text>
                        <text class="oringe">{{item.js}}</text>
                    </view>
                    <view class="item">
                        <text>{{item.desc}}</text>
                    </view>
                </view>
            </view>
        </block>          
    </view>
</view>
